---
import { marked } from "marked";
import { getRemoteFileData } from "../helpers/getRemoteFile";
import { reyeno } from "../helpers/reyeno"


let content = "";

const fileData = await getRemoteFileData(
  `https://raw.githubusercontent.com/fgbyte/fgbyte/main/README.md`,
  "text"
);
if (fileData) {
  content = marked.parse(fileData);
} else {
  content = marked.parse(reyeno);
}
---

<article class="py-3 overflow-auto prose-h2:mb-5 prose-h2:text-3xl prose-h2:font-bold prose-a:underline prose-ul:list-disc prose-ul:my-2 prose-ul:hidden prose-h4:text-xl prose-h4:hidden prose-img:my-3 prose-img:hidden break-words prose-li:my-2 prose-p:text-lg" set:html={content}></article>

